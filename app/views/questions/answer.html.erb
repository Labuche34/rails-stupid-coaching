
<div class="container py-4" style="max-width: 600px;">
  <h3 class="mb-4 text-center">Coach</h3>
  <div class="bg-light rounded p-3" style="height: 400px; overflow-y: auto;">

    <div class="d-flex flex-row-reverse mb-3">
      <div class="flex-shrink-0">
        <img src="https://external-content.duckduckgo.com/iu/?u=https%3A%2F%2Fcdn2.iconfinder.com%2Fdata%2Ficons%2Fcute-animal-face-filled-color-design%2F64%2FAnimal-01-1024.png&f=1&nofb=1&ipt=62dc1579dd2be850dd3fd8482b2f7fa78b714315a6dd1f7d8cc8293161d81591" width="40" height="40" class="rounded-circle" alt="User">
      </div>
      <div class="me-2 text-end">
        <div class="bg-primary text-white rounded-pill px-4 py-4 shadow-sm">
              <h1>Your question :</h1>
                <p><%= @question %></p>
        </div>
      </div>
    </div>

    <div class="d-flex mb-3">
      <div class="flex-shrink-0">
        <img src="https://external-content.duckduckgo.com/iu/?u=https%3A%2F%2Ficon-library.com%2Fimages%2Ftrainer-icon%2Ftrainer-icon-6.jpg&f=1&nofb=1&ipt=1d8401d0fb3505cf7946d040e8122a1ccc3fd73df3f0d1d000660e858897c58b" width="40" height="40" class="rounded-circle" alt="Bot">
      </div>
      <div class="ms-2">
        <div class="bg-white border rounded-pill px-4 py-4 shadow-sm">
          <h1>Coach's answer :</h1>
            <p><%= @answer %></p>
            <p><%= link_to "Ask a new question", "/ask" %></p>
        </div>
      </div>
    </div>
